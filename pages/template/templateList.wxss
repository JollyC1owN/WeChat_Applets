/* pages/template/template.wxss */

.temContainer {
  display: flex;
  flex-direction: column;
  border-top:1px solid #efefef;
  border-bottom:1px solid #efefef;
  padding:5px 0;
  margin:20rpx 0 40rpx;
}

.avatar {
  margin:10rpx 0 20rpx 10rpx;
}

.avatar image {
  width: 60rpx;
  height:60rpx;
  vertical-align: middle;
}

.avatar text {
  font-size: 14px;
  vertical-align: middle;
  margin-left: 10px;
}

.company{
  font-size: 18px;
  font-weight: 700;
  margin:10rpx 0;
}

.big_img {
  width: 100%;
  height:340rpx;
}

.content {
  font-size: 32rpx;
  color: #666;
  text-indent: 64rpx;
  line-height: 56rpx;
}


.content_img image {
  width:32rpx;
  height:32rpx;
  vertical-align: middle;
}

.content_img text {
  font-size: 14px;
  color: #666;
  vertical-align: middle;
  margin:0 16rpx;
}